{
	"manifest_version": 3,
	"name": "Video Screenshot",
	"description": "Create a screenshot of any video!",
	"version": "0.1.0",
	"minimum_chrome_version": "88",
	"browser_specific_settings": {
		"gecko_android": {
			"strict_min_version": "113.0"
		},
		"gecko": {
			"id": "{1d3db426-0801-40ea-b1e7-5fb3661773ef}",
			"strict_min_version": "58.0"
		}
	},
	"options_ui": {
		"page": "options/options.html"
	},
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"64": "icons/icon64.png",
		"128": "icons/icon128.png",
		"256": "icons/icon256.png",
		"512": "icons/icon512.png"
	},
	"permissions": [
		"scripting",
		"activeTab",
		"clipboardWrite",
		"storage"
	],
	"action": {
		"default_title": "Screenshot video",
		"default_icon": {
			"16": "icons/icon16.png",
			"32": "icons/icon32.png",
			"64": "icons/icon64.png",
			"128": "icons/icon128.png",
			"256": "icons/icon256.png",
			"512": "icons/icon512.png"
		}
	},
	"background": {
		"scripts": [
			"background.js"
		],
		"type": "module"
	}
}